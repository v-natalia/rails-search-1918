<div class="container">
<!-- search form -->
  <div class="row justify-content-center">
    <div class="col-sm-8 my-3">
      <%= form_with url: movies_path, method: :get, class: "d-flex" do %>
        <%= text_field_tag :query,
              params[:query],
              class: "form-control",
              placeholder: "Type a keyword"
          %>
        <%= submit_tag "Search", name: "", class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
<!-- liste de movies -->
  <div class="row justify-content-center">
    <div class="col-sm-8">
      <div id="movies">
      <!-- liste de movies pour PG SEARCH MULTISEARCH POLYMORPHIQUE-->
      <% if params[:query].present? %>
        <% if @movies.any? %>
          <% @movies.each do |movie| %>
            <h4><%= movie.searchable.title %></h4>
            <p><%= movie.searchable.synopsis %></p>
            <p><%= movie.searchable_type %></p>
          <% end %>
        <% else %>
          <em>Sorry, no movies found.</em>
        <% end %>
        <% else %>
        <% if @movies.any? %>
          <% @movies.each do |movie| %>
            <h4><%= movie.title %></h4>
            <p><%= movie.synopsis %></p>
          <% end %>
        <% else %>
          <em>Sorry, no movies found.</em>
        <% end %>
      <% end %>
      </div>
    </div>
  </div>
</div>
